{
  "extends": "./config/tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@components": [
        "./src/components/index.ts"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@containers": [
        "src/containers/index.ts"
      ],
      "@containers/*": [
        "src/containers/*"
      ],
      "@hooks": [
        "src/hooks/index.ts"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@pages": [
        "src/pages/index.ts"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@services": [
        "src/services/index.ts"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@store": [
        "src/store/index.ts"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@typings": [
        "src/typings/index.ts"
      ],
      "@typings/*": [
        "src/typings/*"
      ],
      "@utils": [
        "./src/utils/index.ts"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@res": [
        "./res/index.ts"
      ],
      "@res/*": [
        "./res/*"
      ],
      "@type/*": [
        "src/types/*"
      ],
      "@mocks/*": [
        "src/__mocks__/*"
      ],
      "@tests/*": [
        "src/__tests__/*"
      ]
    }
  },
  "include": [
    "res/**/*",
    "src/**/*",
    "global.d.ts"
  ]
}
